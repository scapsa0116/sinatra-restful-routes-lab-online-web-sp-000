<h1><%= @recipe.name %></h1>

<h3>Ingredients: <%= @recipe.ingredients %></h3>

<h3>Cooking_time: <%= @recipe.cook_time %></h3>


<form action="/recipes/<%= @recipe.id %>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
   Name:<input type="text" id="recipe_name" name="name" value="input">
  Ingredients: <input type="text" id="recipe_ingredients" name="ingredients" value="input">
  Cook_Time:<input type="text" id="recipe_cook_time" name="cook_time" value="input">
  <input type="submit" value="submit">
</form>